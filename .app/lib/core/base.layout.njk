---
panel: true
---

<!doctype html>
<html lang="{{ app.lang }}" data-theme="system"> 
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ description or app.description }}">
    <title>{{ title or page.fileSlug }}</title>
    {% favicons 'favicon.svg', appleIconBgColor='#ffffff' %}
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="stylesheet" href="/app.css">
    <script>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker
        .register("/service-worker.js")
        .then((registration) => {
          registration.addEventListener("updatefound", () => {
            const newWorker = registration.installing;
            newWorker.addEventListener("statechange", () => {
              if (newWorker.state === "installed") {
                if (navigator.serviceWorker.controller) {
                  // New service worker installed and registered, we reload the page
                  window.location.reload();
                }
              }
            });
          });
        })
        .catch((error) => {
          console.error("Service Worker registration failed:", error);
      });
    }
  </script>
  </head>
  <body>
    <script>document.documentElement.setAttribute("data-theme", /"(\w+)"+/.exec(localStorage.getItem("theme"))?.[1] || "system")</script>
    <script>document.documentElement.classList.add("supports-js")</script>
    {% include 'shared/skip-link/skip-link.partial.njk' %}

    <div class="app-layout">
      {% include 'core/app-header.partial.njk' %}
      {% include 'modules/panel/panel-overlay.partial.njk' %}
      <div class="app-layout__wrapper">
        <div
          class="app-layout__sidebar"
          x-data
          @click.self="$store.nav.toggle(false)"
          :data-open="$store.nav.open.toString()"
          :data-overlay="$store.nav.open.toString()"
        >
          <div 
            class="app-layout__sidebar-inner"
            x-data="scrollContainer('app:sidebar')"
            x-bind="container"
          >
            {% include 'modules/sidebar/sidebar.partial.njk' %}
          </div>
        </div>
        <div>
          {{ content | safe }}
          <div>Footer</div>
        </div>
      </div>
    </div>

    <script src="/app.js" data-base="{{ '/' | htmlBaseUrl }}"></script>

    <div aria-hidden="true" hidden>
      {{ 'hash' | icon({ id: 'icon-hash', width: null, height: null }) | safe }}
      {{ 'link' | icon({ id: 'icon-anchor-link', width: null, height: null }) | safe }}
      {{ 'copy' | icon({ id: 'icon-copy', width: null, height: null }) | safe }}
      {{ 'check' | icon({ id: 'icon-check', width: null, height: null }) | safe }}
    </div>
  </body>
</html>

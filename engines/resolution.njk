<div class="page">
  <main class="page__main" id="app-content">
    <h1 class="page__title">Resolution Engine</h1>
    <div class="article">

<div x-data="resolutionEngine()" class="resolution-engine">
  <form @submit.prevent="roll(); return false;" class="resolution-engine__form">
    <div class="resolution-engine__field">
      <input
        type="text"
        id="question"
        x-model="question"
        placeholder="What are you trying to do?"
        class="resolution-engine__input"
      />
    </div>

    <div class="resolution-engine__controls">
      <select id="resolution-type" x-model="resolutionType" class="resolution-engine__select">
        <option value="basic">Task</option>
        <option value="oracle">Oracle</option>
        <option value="spellcasting">Spellcasting</option>
        <option value="attack">Attack</option>
        <option value="defense">Defense</option>
        <option value="npc-interactions">NPC Interactions</option>
        <option value="debt-collectors">Debt Collectors</option>
        <option value="harvesting">Harvesting</option>
        <option value="crafting">Crafting</option>
        <option value="augmentation">Augmentation</option>
        <option value="salvaging">Salvaging</option>
        <option value="navigation">Navigation</option>
        <option value="secrets">Secrets</option>
      </select>

      <select id="level" x-model.number="level" x-show="!showOracleOptions" class="resolution-engine__select">
        <option value="0">0 - Routine</option>
        <option value="1">1 - Simple</option>
        <option value="2">2 - Standard</option>
        <option value="3">3 - Demanding</option>
        <option value="4">4 - Difficult</option>
        <option value="5" selected>5 - Challenging</option>
        <option value="6">6 - Intimidating</option>
        <option value="7">7 - Formidable</option>
        <option value="8">8 - Heroic</option>
        <option value="9">9 - Immortal</option>
        <option value="10">10 - Impossible</option>
      </select>

      <select id="oracle-likelihood" x-model="oracleLikelihood" x-show="showOracleOptions" class="resolution-engine__select">
        <option value="less">Less likely</option>
        <option value="50/50" selected>50/50</option>
        <option value="more">More likely</option>
      </select>
    </div>

    <button type="button" class="resolution-engine__button" @click="roll()">Roll</button>
  </form>

  <div x-show="result !== null" class="resolution-engine__result" x-cloak>
    <div class="resolution-engine__output-wrapper">
      <div class="resolution-engine__output">
        <pre x-text="result?.formatted || ''"></pre>
      </div>
      <button
        @click="copyResult()"
        class="resolution-engine__copy-button"
        :data-copied="copied"
        :aria-label="copied ? 'Copied!' : 'Copy to clipboard'"
      >
        <span x-show="!copied">{{ 'copy' | icon | safe }}</span>
        <span x-show="copied">{{ 'check' | icon | safe }}</span>
      </button>
    </div>
  </div>
</div>

<style>

.resolution-engine__select {
  padding: 0.75rem;
  border: 1px solid var(--color-neutral-border);
  border-radius: var(--rounded-sm);
  background: var(--color-neutral-bg);
  color: var(--color-neutral-text);
  font-size: 1rem;
}

